{{ 'section-featured-collections.css' | asset_url | stylesheet_tag }}

<div class="featured-collections" id="js-scroll">
    {% for block in section.blocks %}
        <a href="{{ block.settings.collection.url }}" class="collection">
            <img src="{{ block.settings.collection.image.src | img_url: 'large' }}"
                alt="{{ block.settings.collection.image.alt | escape }}" loading="lazy">
            <p class="title">{{ block.settings.collection.title }} <span>{% render 'icon-arrow-black' %}</span> </p>
        </a>
    {% endfor %}
</div>

{{ 'js-scroll.js' | asset_url | script_tag }}

{% schema %}
    {
        "name": "Featured Collections",
        "settings": [],
        "blocks": [
            {
                "name": "Collection",
                "type": "collection",
                "settings": [
                    {
                        "type": "collection",
                        "id": "collection",
                        "label": "Collection"
                    }
                ]
            }
        ],
        "presets": [{
            "name": "Featured Collections"
        }]
    }
{% endschema %}