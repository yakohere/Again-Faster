<div class="featured-collections-wrapper" id="js-scroll">
    {% for block in section.blocks %}
        <a href="{{ block.settings.collection.url }}" class="featured-collection">
            <img class="featured-collection__image"" src="{{ block.settings.collection.image.src | img_url: 'large' }}" alt="{{ block.settings.collection.image.alt | escape }}" loading="lazy">
            <p class="featured-collection__title">{{ block.settings.collection.title }} <span>{% render 'icon-arrow-black' %}</span> </p>
        </a>
    {% endfor %}
</div>

{% schema %}
    {
        "name": "Featured Collections",
        "settings": [],
        "blocks": [
            {
                "name": "Collection",
                "type": "collection",
                "settings": [
                    {
                        "type": "collection",
                        "id": "collection",
                        "label": "Collection"
                    }
                ]
            }
        ],
        "presets": [{
            "name": "Featured Collections"
        }]
    }
{% endschema %}